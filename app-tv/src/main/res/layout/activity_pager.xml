<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <me.zhouzhuo810.magpietv.widget.Indicator
        android:id="@+id/indicator"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_tab_height"
        app:i_indicator_type="tab_with_text"
        app:i_isNeedScaleInPx="true"
        app:i_normalTabTextSize="@dimen/base_tab_text_size"
        app:i_selectTabTextColor="@color/colorPrimary"
        app:i_selectTabTextSize="50px"
        app:i_shouldTabExpand="false"
        app:i_showUnderline="false"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>